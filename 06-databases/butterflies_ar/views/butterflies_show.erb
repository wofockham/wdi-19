<h2><%= @butterfly['name'] %></h2>
<h3>Family: <em><%= @butterfly['family'] %></em></h3>

<% unless @butterfly.plant.nil? %>
  <h3>Larval plant:
    <a href="/plants/<%= @butterfly.plant.id %>">
      <%= @butterfly.plant.name %>
    </a>
  </h3>
<% end %>

<% unless @butterfly['image'].nil? %>
  <img class="feature" src="<%= @butterfly['image'] %>" alt="">
<% end %>

<div class="controls">
  <a href="/butterflies/<%= @butterfly['id'] %>/delete">Delete</a>
  <a href="/butterflies/<%= @butterfly['id'] %>/edit">Edit</a>
</div>
